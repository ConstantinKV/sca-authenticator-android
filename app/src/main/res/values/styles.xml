<resources>
    <!--COMMON-->
    <style name="KeypadAction">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_30</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/selector_keypad_action</item>
    </style>

    <style name="BlueButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/selector_blue_button</item>
        <item name="android:elevation">@dimen/dp_30</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LargeBlueButton" parent="BlueButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/dp_58</item>
        <item name="android:layout_marginEnd">@dimen/dp_58</item>
    </style>

    <style name="WhiteButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:backgroundTint">@color/negative_button_background</item>
        <item name="android:elevation">@dimen/dp_30</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WhiteLinkAction" parent="Text14BlueMedium">
        <item name="android:layout_width">@dimen/dp_180</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_bg_button_white_ripple</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MenuItemTextAppearance">
        <item name="android:textColor">#000000</item>
    </style>

    <!--SETUP SCREEN-->
    <style name="SetupLogoImage">
        <item name="android:layout_width">@dimen/dp_100</item>
        <item name="android:layout_height">@dimen/dp_100</item>
        <item name="android:layout_marginTop">@dimen/dp_46</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SetupSkipAction" parent="@style/WhiteLinkAction">
        <item name="android:layout_marginBottom">@dimen/dp_40</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">@string/actions_skip</item>
    </style>

    <!--BANKS LIST-->
    <style name="ConnectionLogoImage">
        <item name="android:layout_width">@dimen/dp_48</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:layout_marginStart">@dimen/dp_15</item>
        <item name="android:layout_marginEnd">@dimen/dp_15</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!--DIALOG BUTTONS-->
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/cancel_button_background</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/clear_button_background</item>
    </style>

    <style name="AppBarActionContainer">
        <item name="android:layout_width">@dimen/action_bar_bottom_section_size</item>
        <item name="android:layout_height">@dimen/action_bar_bottom_section_size</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppBarActionImage">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--POPUP MENU-->
    <style name="PopupMenuRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PopupMenuImage">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="PopupMenuText" parent="Text16Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_12</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>
