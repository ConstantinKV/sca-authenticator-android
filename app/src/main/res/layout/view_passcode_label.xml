<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_15">

    <ImageView
        android:id="@+id/firstItemView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/shape_passcode_item_off"
        app:layout_constraintEnd_toStartOf="@+id/secondItemView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />


    <ImageView
        android:id="@+id/secondItemView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/shape_passcode_item_off"
        app:layout_constraintEnd_toStartOf="@+id/thirdItemView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/firstItemView"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/thirdItemView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/shape_passcode_item_off"
        app:layout_constraintEnd_toStartOf="@+id/fourthItemView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/secondItemView"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/fourthItemView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/shape_passcode_item_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/thirdItemView"
        tools:layout_editor_absoluteY="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
