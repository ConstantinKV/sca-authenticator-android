<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <FrameLayout
        android:id="@+id/statusProgressOrImageContainer"
        android:layout_width="@dimen/dp_76"
        android:layout_height="@dimen/dp_76"
        android:layout_marginTop="@dimen/dp_106"
        android:background="@drawable/shape_bg_process_status"
        android:elevation="@dimen/dp_40">

        <ProgressBar
            android:id="@+id/progressBarView"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/primary"
            android:indeterminateTintMode="src_in" />
    </FrameLayout>

    <TextView
        android:id="@+id/titleView"
        style="@style/Text22Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_32"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="@string/connect_status_in_progress" />

    <TextView
        style="@style/Text18Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_32"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:text="@string/connect_status_in_progress_description" />
</LinearLayout>
