<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background">

    <FrameLayout
        android:id="@+id/topSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/passcodeInputView"
        app:layout_constraintVertical_weight="2">

        <ImageView
            android:id="@+id/appLogoView"
            android:contentDescription="@string/app_name_short"
            android:layout_width="@dimen/logo_image_size"
            android:layout_height="@dimen/logo_image_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_app_logo" />
    </FrameLayout>

    <com.saltedge.authenticator.widget.passcode.PasscodeEditView
        android:id="@+id/passcodeInputView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topSpace"
        app:layout_constraintVertical_weight="5"/>

    <LinearLayout
        android:id="@+id/resetPasscodeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/backActionImageView"
            android:contentDescription="@string/actions_cancel"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back_24dp" />

        <ImageView
            android:contentDescription="@string/forgot_passcode_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_125"
            android:layout_marginEnd="@dimen/dp_16"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_forgot_passcode"
            tools:background="@color/primary" />

        <TextView
            android:id="@+id/titleView"
            style="@style/Text22DarkRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_32"
            android:text="@string/forgot_passcode_title"
            tools:background="@color/primary"
            tools:text="Forgot passcode?" />

        <TextView
            android:id="@+id/subTitleView"
            style="@style/Text18Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_32"
            android:lines="2"
            android:text="@string/forgot_passcode_description"
            android:textAlignment="center"
            tools:background="@color/primary"
            tools:text="Please clear app data and establish new connection with your provider." />

        <Button
            android:id="@+id/clearView"
            style="@style/BlueButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:layout_marginStart="@dimen/dp_58"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_marginEnd="@dimen/dp_58"
            android:text="@string/settings_clear_data"
            android:textSize="@dimen/text_18" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
