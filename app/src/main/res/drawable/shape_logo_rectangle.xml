<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solids that simulate shadow !-->
    <item>
        <shape>
            <corners android:radius="@dimen/logo_corner_radius" />
            <solid android:color="#20CCCCCC" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/logo_corner_radius" />
            <solid android:color="#30CCCCCC" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/logo_corner_radius" />
            <solid android:color="#40CCCCCC" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <!-- main background !-->
    <item>
        <shape>

            <size
                android:width="106dp"
                android:height="106dp" />

            <corners android:radius="@dimen/logo_corner_radius" />
            <solid android:color="#ffffff" />
        </shape>
    </item>
</layer-list>
